<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.PersonelEklemeEkrani"
    android:background="@drawable/arkaplan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/personelListesi"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/personelTel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittextduzeni"
                android:ems="10"
                android:hint="Personel Telefon"
                android:inputType="phone"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/personelAd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittextduzeni"
                android:ems="10"
                android:hint="Personel İsim"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/personelSoyad"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittextduzeni"
                android:ems="10"
                android:hint="Personel Soyad"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/personelTC"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittextduzeni"
                android:ems="10"
                android:hint="Personel TC"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/personelMail2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittextduzeni"
                android:ems="10"
                android:hint="Personel E-Mail"
                android:inputType="textEmailAddress"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/personelSifre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittextduzeni"
                android:ems="10"
                android:hint="Personel Şifre"
                android:inputType="textPassword"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/personelRolu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittextduzeni"
                android:ems="10"
                android:hint="Personel Rolü"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/butonduzeni"
                android:onClick="personel_kaydet"
                android:text="Personel Kaydet" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>